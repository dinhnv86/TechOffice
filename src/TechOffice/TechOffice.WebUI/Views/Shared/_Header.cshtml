                using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    <ul class="nav navbar-nav navbar-right">
                        @if (User.IsInRole("SupperAdmin") || (User.IsInRole("Admin")))
                        {
                            <li>
                                <a href="@Url.RouteUrl(UrlLink.ADMIN)">
                                    <span class="glyphicon glyphicon-lock"></span>
                                    @Html.Raw(User.Identity.FullName())
                                </a>
                            </li>
                        }
                        else
                        {
                            <li><a>@Html.Raw(User.Identity.FullName())</a></li>
                        }

                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()">Thoát</a>
                        </li>
                    </ul>
                }
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("LogIn", "Account")">Đăng nhập</a></li>
                </ul>
            }
