@model IEnumerable<BaseDataViewModel>

<div class="supp">
    <h3 class="sbar">
        <span class="title_sbar">Danh mục</span>
        <div class="btn_down btn_down_sp">
            <i class="fa fa-chevron-down"></i>
        </div>
    </h3>
    <div class="btn_down_spshow menu_products">
        <ul id="menu_left">
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <li>
                        @Html.ActionLink(item.Name, "Index", "Home", routeValues: new { newsCategoryId = item.Id },htmlAttributes:new { })
                    </li>
                }
            }
        </ul>
    </div>
</div>
