@using AnThinhPhat.ViewModel.TacNghiep;

@model InitNhomCoQuanCoLienQuanBindDataTemp

<div class="col-md-12">
    <label>Các cơ quan có liên quan</label>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="col-sm-10">Tên cơ quan</th>
                <th class="col-sm-2">Có liên quan</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.NhomCoQuanInfos.Count; i++)
            {
                <tr>
                    <td colspan="2">
                        <input data-val="true" data-val-number="The field Id must be a number." data-val-required="The Id field is required."
                               id=@string.Format("{0}_{1}__NhomCoQuan_Id",Model.ParentNameSpace,i)
                               name=@string.Format("{0}[{1}].NhomCoQuan.Id",Model.ParentNameSpace,i) type="hidden" value="@Model.NhomCoQuanInfos[i].NhomCoQuan.Id">
                        <span class="glyphicon glyphicon-plus" data-toggle="collapse" data-target="#ncq_@Model.NhomCoQuanInfos[i].NhomCoQuan.Id">
                        </span>
                        @Model.NhomCoQuanInfos[i].NhomCoQuan.Name
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="hiddenRow">
                        <div class="collapse" id="ncq_@Model.NhomCoQuanInfos[i].NhomCoQuan.Id">
                            @{ Html.RenderPartial("_PartialPageListBodies", new InitCoQuanCoLienQuanBindDataTemp { ParentNameSpace = Model.ParentNameSpace, ParentId = i.ToString(), CoQuanInfos = @Model.NhomCoQuanInfos[i].CoQuanInfos });}
                        </div>
                    </td>
                </tr>
          }
        </tbody>
    </table>
</div>
