@model AnThinhPhat.ViewModel.Users.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<br />

@if (TempData["Result"] != null)
{
    <div class="alert alert-danger fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Error!</strong>@TempData["Result"]
    </div>
}

@using (@Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-12 col-md-offset-2 col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <strong>Thay đổi mật khẩu</strong>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                @Html.DisplayNameFor(x => Model.UserName)
                            </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", disabled = true })
                                @Html.HiddenFor(x => x.UserName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">@Html.DisplayNameFor(x => Model.PasswordCurrent)<span class="required">*</span></label>
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.PasswordCurrent, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.PasswordCurrent)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">@Html.DisplayNameFor(x => Model.NewPassword)<span class="required">*</span></label>
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.NewPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">@Html.DisplayNameFor(x => Model.NewConfirmPassword)<span class="required">*</span></label>
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.NewConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.NewConfirmPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn btn-primary btn-width-md" type="submit" value="Save" name="btnSubmit" id="btnSubmit">@Buttons.User_ChangePassword_Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

